<reactiveUi:ReactiveUserControl x:Class="MaterializeExcel.View.Nodes.DatabaseNodeView"
                                x:TypeArguments="nodes:DatabaseNodeViewModel"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:nodes="clr-namespace:MaterializeExcelViewModel.Nodes;assembly=MaterializeExcelViewModel"
                                xmlns:reactiveUi="http://reactiveui.net"
                                xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks">

    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <iconPacks:PackIconMaterial
            Kind="Database"
            Width="12"
            Height="12"
            VerticalAlignment="Center"
            Margin="0, 0, 5, 0" Foreground="Indigo"/>
        
        <Label Grid.Column="1"
            Grid.Row="0"
            x:Name="ObjectName"/>
    </Grid>
</reactiveUi:ReactiveUserControl>