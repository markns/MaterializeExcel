<reactiveUi:ReactiveUserControl x:Class="MaterializeExcel.View.Nodes.SchemaNodeView"
                                x:TypeArguments="nodes:SchemaNodeViewModel"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:nodes="clr-namespace:MaterializeExcel.ViewModel.Nodes;assembly=MaterializeExcel.ViewModel"
                                xmlns:reactiveUi="http://reactiveui.net"
                                xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks">
    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <iconPacks:PackIconFontAwesome Kind="ProjectDiagramSolid"
                                       Width="12"
                                       Height="12"
                                       VerticalAlignment="Center"
                                       Margin="0, 0, 5, 0" Foreground="SeaGreen"/>

        <Label Grid.Column="1"
               Grid.Row="0"
               x:Name="ObjectName" />

    </Grid>
</reactiveUi:ReactiveUserControl>