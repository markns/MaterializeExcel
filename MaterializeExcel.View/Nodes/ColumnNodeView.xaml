<reactiveUi:ReactiveUserControl x:Class="MaterializeExcel.View.Nodes.ColumnNodeView"
                                x:TypeArguments="nodes:ColumnNodeViewModel"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:nodes="clr-namespace:MaterializeExcel.ViewModel.Nodes;assembly=MaterializeExcel.ViewModel"
                                xmlns:reactiveUi="http://reactiveui.net"
                                xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks">
    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <iconPacks:PackIconMaterial
            Kind="FormatColumns"
            Width="12"
            Height="12"
            VerticalAlignment="Center"
            Margin="0, 0, 5, 0" />

        <Label Grid.Column="1" x:Name="ObjectName" />
        <Label Grid.Column="2" x:Name="Type" Opacity="0.3"/>

    </Grid>
</reactiveUi:ReactiveUserControl>