<reactiveUi:ReactiveUserControl x:Class="MaterializeExcel.View.Nodes.ColumnNodeView"
                                x:TypeArguments="nodes:ColumnNodeViewModel"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:nodes="clr-namespace:MaterializeExcelViewModel.Nodes;assembly=MaterializeExcelViewModel"
                                xmlns:reactiveUi="http://reactiveui.net">
    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label>Column</Label>
        <TextBlock
            Grid.Column="1"
            Grid.Row="0"
            x:Name="ObjectName" />

    </Grid>
</reactiveUi:ReactiveUserControl>